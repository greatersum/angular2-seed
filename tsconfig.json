{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "filesGlob": [
    "app/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}